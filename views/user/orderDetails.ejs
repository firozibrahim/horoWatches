                                    if (data.success) {
                                        swal(`Order with ID ${orderId} and Item ID ${itemId} has been canceled.`);
                                    } else {
                                        swal(data.message);
                                    }
                                })
                                .catch((error) => {
                                    console.error('Error canceling the order:', error);
                                });
                        }
                    });
                });
            });
