<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>products</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/user/css/home.css">
    <link rel="stylesheet" href="/user/css/unAuthorised.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;1,300&family=Poppins&family=Roboto&display=swap"
        rel="stylesheet">

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 15px;
        line-height: 1.5;
        color: dimgray;
    }

    section {
        display: flex;
        flex-flow: row wrap;
    }

    text {
        overflow: hidden;
        font-size: 16px;
    }

    h5 {
        height: 50px;
        overflow: hidden;
    }

    H1 {
        font-family: "IBM Plex Sans", sans-serif;
        font-weight: 100;
        text-transform: uppercase;
        font-size: 25px;
        height: 30px;
        overflow: hidden;
    }

    figure {
        position: relative;

    }

    figure img {
        width: 400px;
        height: 350px;
        background-image: contain;

    }

    figure img:hover {
        opacity: 0.6;
        transition: all .3s linear;
    }

    .details {
        /* font-family: 'Open Sans', sans-serif; */
        font-family: 'Poppins', sans-serif;
        /* font-family: 'Roboto', sans-serif; */
        /* padding-left: 20px; */
    }

    .column {
        box-sizing: border-box;
        flex: 1 100%;
        justify-content: space-around;
        margin: 10px;
    }

    .card-style {
        width: 400px;
        border: none;
        /* background-color: #a55e5e; */
        box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.4);
        transition: all 0.25s linear;
        height: 500px;
    }

    .amount {
        height: 30px;
        color: tan;
        font-size: 20px;
        justify-content: baseline;
    }

    .discount {
        margin-left: 5px;
        font-size: 13px;
        color: rgb(216, 150, 62);
    }

    .card-style:hover {
        box-shadow: -1px 10px 29px 0px rgba(0, 0, 0, 0.8);
    }

    @media (min-width: 500px) {
        .column {
            flex: 0 0 calc(100%/2 - 40px);
        }
    }

    @media (min-width: 900px) {
        .column {
            flex: 0 0 calc(100%/4 - 40px);
        }
    }
</style>

<body style="background-color: rgb(247, 247, 247);">
    <%-include("../partials/navbar.ejs")%>
        <section class="p-3">
            <div class="container-fluid">
                <div class="row">
                    <!-- sidebar -->
                    <div class="col-lg-2 mt-4">
                        <!-- Toggle button -->
                        <h1 style="font-size:30px; font-weight:bold;">Filter</h1>
                        <p class="bg-secondary text-bg-dark" style="font-size:12px;"><strong>filter by Brand</strong>
                        </p>
                        <form>
                            <label style="font-size:12px;"><input type="checkbox" name="brand" value="ROLEX" id="red" />
                                Rolex</label><br>
                            <label style="font-size:12px;"><input type="checkbox" name="brand" value="PANERA"
                                    id="yellow" /> PANERA</label><br>
                            <label style="font-size:12px;"><input type="checkbox" name="brand" value="OMEGA"
                                    id="pink" /> OMEGA</label><br>
                            <label style="font-size:12px;"><input type="checkbox" name="brand" value="TAG HEUER"
                                    id="purple" /> TAG HEUER</label><br>
                            <!-- <label style="font-size:12px;"><input type="checkbox" name="room" value="library" id="green" /> Library</label><br> -->
                            <!-- <label style="font-size:12px;"><input type="checkbox" name="room" value="hallway" id="other" /> Hallway</label> -->
                        </form>


                    </div>
                    <!-- Product List -->
                    <div class="col-lg-10 d-flex flex-wrap" id="parent">
                        <%data.filter((x)=> x.status === true && x.AvailableQuantity > 0).forEach((x) => {%>
                            <div class="card-style col-lg-4 mt-4 m-1">
                                <figure>
                                    <a href="/user/toProductView/<%= x._id %>">
                                        <img src="/product-image/<%= x.images[0] %>" class="" />
                                        <a href="#!" class="btn btn-light border px-2 pt-2 icon-hover"
                                            style="position: absolute; top: 5px; right: 5px;"><i
                                                class="fas fa-heart fa-lg px-1"></i></a>
                                    </a>
                                </figure>
                                <div class="details d-flex flex-lg-column px-3">

                                    <div class="card-text " style="color: black;">
                                        <h5>
                                            <%=x.BrandName%>
                                                <br><text>
                                                    <%=x.ProductName%>
                                                </text>
                                        </h5>
                                    </div>

                                    <div class="amount d-flex">
                                        <p> ₹ <%= x.DiscountAmount %>
                                                <p>
                                                    <span class="discount"><small>₹ <%= x.Price %></small></span>
                                    </div>
                                    <div class="mb-3 cart">
                                        <button class="btn btn-outline-dark shadow-0 rounded-0 w-100"
                                            onclick="addtocart('<%=x._id%>')" type="button">Add To
                                            Cart</button>

                                    </div>
                                </div>

                            </div>
                            <%});%>
                    </div>
                </div>
            </div>
            </div>
            <hr />
            <!-- Pagination -->
            <!-- Pagination -->
            <nav aria-label="Page navigation example" class="w-100 my-4">
                <ul class="pagination justify-content-center">
                    <% for (let i=1; i <=pages; i++) { %>
                        <li class="page-item <%= current === i ? 'active' : '' %>">
                            <a class="page-link" href="/user/toProduct-list/<%= i %>">
                                <%= i %>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </nav>
            <!-- End Pagination -->

        </section>
        <%-include("../partials/footer.ejs")%>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script>
                function addtocart(id) {
                    console.log(id, "id");
                    console.log("add to cart");
                    fetch(`/user/addToCart/${id}`, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                    })
                        .then(response => response.json())
                        .then(response => {

                        }).then(response => {
                            swal("item added to cart", {
                                icon: "success",
                            });
                        })
                        .catch(error => {
                            console.log("error found", error);
                        });

                }
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>

            <script>
                var el = document.getElementById("wrapper");
                var toggleButton = document.getElementById("menu-toggle");

                toggleButton.onclick = function () {
                    el.classList.toggle("toggled");
                };
            </script>
            <script>
                document
                    .querySelectorAll(
                        'input[name="brand"]'
                    )
                    .forEach((input) => {
                        input.addEventListener("change", updateProductList);
                    });

                function updateProductList() {
                    const brands = Array.from(document.querySelectorAll('input[name="brand"]:checked')).map((data) => data.value)
                    // alert(brands.join(","))
                    let allCard = []
                    fetch(`/user/filter-products/?brand=${brands.join(",")}`)
                        .then(response => response.json())
                        .then(res => {
                            res.data.forEach((x) => {
                               if(x.status === true && x.AvailableQuantity > 0){

                                   const card = `
     <div class="card-style col-lg-4 mt-4 m-1">
       <figure>
         <a href="/user/toProductView/${x._id}">
           <img src="/product-image/${x.images[0]}" class="" />
           <a href="#!" class="btn btn-light border px-2 pt-2 icon-hover" style="position: absolute; top: 5px; right: 5px;">
             <i class="fas fa-heart fa-lg px-1"></i>
           </a>
         </a>
       </figure>
       <div class="details d-flex flex-lg-column px-3">
         <div class="card-text " style="color: black;">
           <h5>
             ${x.BrandName} <br>
             <text>${x.ProductName}</text>
           </h5>
         </div>
         <div class="amount d-flex">
           <p> ₹ ${x.DiscountAmount}
             <p>
               <span class="discount"><small>₹ ${x.Price}</small></span>
         </div>
         <div class="mb-3 cart">
           <button class="btn btn-outline-dark shadow-0 rounded-0 w-100" onclick="addtocart('${x._id}')" type="button">
             Add To Cart
           </button>
         </div>
       </div>
     </div>
    `;
                                  
    
    // alert(card)
    allCard.push(card)
    }
    })
      // alert(`all card ${allCard.length}`)
      let data=allCard.join("")
    if(allCard.length>=1){
    // alert('reached')
        document.getElementById("parent").innerHTML=data
        }else{
        document.getElementById("parent").innerHTML='dat not found'
             }
                });

                }

            </script>
</body>

</html>